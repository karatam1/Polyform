@{
    ViewData["Title"] = "User Credentials";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <p>Use this page to enter user credentials</p>
    <form id="frm1" action="/action_page.php">
        Username: <input type="text" name="usr">
        <br>
        Password: <input type="text" name="pwd">
        <br>
        <input type="button" onclick="userLogin()" value="Enter">
    </form>

    <script>
        function userLogin() {

            document.getElementById("frm1").submit();
            console.log(document.getElementsByName('usr').value);
            console.log(document.getElementsByName('pwd').value);
        }</script>

</body>
</html>

